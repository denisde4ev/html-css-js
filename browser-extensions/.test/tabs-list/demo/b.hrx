<===> manifest.json
{
	"manifest_version": 2,
	"name": "Popup Alert Demo",
	"version": "1.1",
	"description": "Demo extension with popup and settings page.",
	"browser_action": {
		"default_title": "Click Me",
		"default_popup": "popup.html"
	},
	"options_ui": {
		"page": "options.html",
		"open_in_tab": false
	},
	"permissions": []
}

<===> popup.html
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Popup</title>
	<script src="popup.js"></script>
</head>
<body>
	<button id="alertBtn">Click to Alert</button>
</body>
</html>

<===> popup.js
document.addEventListener("DOMContentLoaded", () => {
	const btn = document.getElementById("alertBtn");
	btn.addEventListener("click", () => {
		alert("extension clicked");
	});
});

<===> options.html
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Extension Settings</title>
</head>
<body>
	<h1>Preferences</h1>
	<span>this is settings.</span>
</body>
</html>
