	p#digital(class=`
		text-center
	`) 00:00:00.000


	hr(class=`
		w-100

		`+/*
		color-[#]
		*/`
		opacity-30
		mt-2 mb-5
	`)


	div#analog(class=`
		w-100 h-100
		ascpect-1/1
		shrink-0

		border border-current
		rounded-full

		flex items-center justify-center
		relative
	`)

		//- #frame-0.frame(class=``)
